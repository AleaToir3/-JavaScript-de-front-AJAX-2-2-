<div class="container">
  <ul>
  <% @categories.each do  |category|%>
  <li><%= category.title  %></li>
  <div class="card">
    <ul>
      <% category.tasks.each do |task|  %>
      <li><%= task.title  %>, to read: <%= task.deadline.strftime('%D')  %></li>
      <%= image_tag task.image, class: "rounded-circle" %>
      <% end %>
    </ul>
  </div>
  <% end %>
  </ul>
</div>
